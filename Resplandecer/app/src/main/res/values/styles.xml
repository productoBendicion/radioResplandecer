<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomeTitleStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/darkBackground</item>
    </style>

    <style name="HomeContentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/darkBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:verticalSpacing">8dp</item>
    </style>

    <style name="SongTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/darkBackground</item>
    </style>

    <style name="SongSubtitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radio.resplandecer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".screens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.VozQueClamaEnElDesierto.VozQueClamaEnElDesierto" />
        <activity android:name=".screens.VdeeBilingue.VdeeBilingue" />
        <activity android:name=".screens.vdee.VDEE" />
        <activity android:name=".screens.declaracionAlDia.DeclaracionAlDia" />
        <activity android:name=".screens.maranatha.MaranathaSongsActivity" />
        <activity android:name=".baseActivities.BaseDrawerActivity" />
        <activity android:name=".screens.home.HomeActivity"/>

        <service
            android:name=".utils.ForegroundService"
            android:enabled="true"
            android:exported="true" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />


</manifest>